<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/space_10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.bolema.phonelive.widget.CircleImageView
        android:id="@+id/cv_userHead"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_50"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_uname"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:id="@+id/tv_item_usex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_25"/>
            <ImageView
                android:id="@+id/tv_item_ulevel"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_25" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:textColor="@color/gray"
            android:id="@+id/tv_item_usign"
            android:textSize="@dimen/text_size_10"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:src="@drawable/blacklist"
        android:layout_width="@dimen/space_30"
        android:layout_height="@dimen/space_30" />
</com.zhy.autolayout.AutoRelativeLayout>