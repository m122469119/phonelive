<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_show_gift_selected"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        >
        <!--礼物图片-->
        <com.bolema.phonelive.widget.LoadUrlImageView
            android:id="@+id/iv_show_gift_img"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40" />
        <!--礼物价格-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/actionbarbackground"
                android:id="@+id/tv_show_gift_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/redpacket_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <!--礼物经验值-->
        <TextView
            android:visibility="gone"
            android:textSize="@dimen/text_size_9"
            android:id="@+id/tv_show_gift_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>