<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sl_newest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_50">

        <com.bolema.phonelive.widget.HeaderGridView
            android:id="@+id/gv_newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/space_2"
            android:numColumns="3"
            android:padding="@dimen/space_2"
            android:verticalSpacing="@dimen/space_2">
        </com.bolema.phonelive.widget.HeaderGridView>

    </android.support.v4.widget.SwipeRefreshLayout>


</com.zhy.autolayout.AutoLinearLayout>