<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:background="@color/default_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/default_background">
            <!--头部-->
          <include layout="@layout/fragment_user_information_head" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:id="@+id/ll_profit"
                style="@style/option_item_rl" >

                <ImageView
                    style="@style/option_item_img"
                    android:src="@drawable/me_under_harvest"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/message" />

                <TextView
                    android:id="@+id/tv_mes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_10"
                    android:gravity="right" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/h_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:background="@color/white"
                android:id="@+id/ll_level"
                style="@style/option_item_rl" >

                <ImageView
                    style="@style/option_item_img"
                    android:src="@drawable/me_under_grade"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/blog" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/h_line" />
            <com.zhy.autolayout.AutoLinearLayout

                android:background="@color/white"
                android:id="@+id/ll_diamonds"
                style="@style/option_item_rl" >

                <ImageView
                    style="@style/option_item_img"
                    android:src="@drawable/me_my_diamond"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/note" />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                style="@style/h_line" />


            <com.zhy.autolayout.AutoLinearLayout
                android:background="@color/white"
                android:id="@+id/ll_exchange_vote"
                style="@style/option_item_rl" >

                <ImageView
                    style="@style/option_item_img"
                    android:src="@drawable/me_exchange_diamond"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/option_item_text"
                    android:text="兑换播币" />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                style="@style/h_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:background="@color/white"
                android:id="@+id/ll_vip"
                style="@style/option_item_rl" >
                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/me_buy_vip"
                    android:contentDescription="@null" />
                <TextView
                    style="@style/option_item_text"
                    android:text="购买VIP" />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                style="@style/h_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:background="@color/white"
                android:id="@+id/ll_balance_detail"
                style="@style/option_item_rl" >
                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/me_profit_detail"
                    android:contentDescription="@null" />
                <TextView
                    style="@style/option_item_text"
                    android:text="收支明细" />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                style="@style/h_line" />

            <com.zhy.autolayout.AutoLinearLayout
                android:background="@color/white"
                android:id="@+id/ll_authenticate"
                style="@style/option_item_rl" >
                <ImageView
                    style="@style/option_item_img"
                    android:src="@drawable/me_apply"
                    android:contentDescription="@null" />
                <TextView
                    style="@style/option_item_text"
                    android:text="@string/authenticate" />
            </com.zhy.autolayout.AutoLinearLayout>
            <!--HHH 2016-09-13 -->

            <com.zhy.autolayout.AutoLinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/space_10"
                android:id="@+id/ll_setting"
                style="@style/option_item_rl" >

                <ImageView
                    style="@style/option_item_img"
                    android:src="@drawable/me_setting"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/team" />
            </com.zhy.autolayout.AutoLinearLayout>


           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/space_60"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoFrameLayout>