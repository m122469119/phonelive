<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_cash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bolema.phonelive.ui.RequestCashActivity"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="金额"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />

        <EditText
            android:inputType="number"
            android:digits="1234567890"
            android:maxLength="9"
            android:layout_height="@dimen/space_50"
            android:id="@+id/et_cash_num"
            android:textColorHint="#E2E2E5"
            android:background="@null"
            android:textSize="@dimen/text_size_16"
            android:hint="请填写提现金额"
            android:layout_width="wrap_content"
            android:layout_weight="4"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:text="提现"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/pink_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_request_cash"
        android:background="@drawable/btn_yzm_background"
        android:layout_marginTop="@dimen/space_16" />

</com.zhy.autolayout.AutoLinearLayout>
