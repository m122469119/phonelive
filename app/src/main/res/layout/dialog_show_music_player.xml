<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoRelativeLayout
            android:padding="@dimen/space_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="音效调节"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_30" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/close_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            style="@style/h_line"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:padding="@dimen/space_10"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginLeft="@dimen/space_30"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.bolema.phonelive.widget.LiveSeekBar
                    android:id="@+id/dialog_music_sb_banzou"
                    android:thumb="@drawable/me_ic_followed"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="50"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp" />
                <TextView
                    android:text="伴奏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginLeft="@dimen/space_100"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.bolema.phonelive.widget.LiveSeekBar
                    android:id="@+id/dialog_music_sb_voice"
                    android:thumb="@drawable/me_ic_followed"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="50"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp" />
                <TextView
                    android:text="人声"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/h_line"/>
        <!--音效调节-->
        <com.zhy.autolayout.AutoLinearLayout
            android:padding="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/dialog_music_btn_melodious"
                android:background="@drawable/btn_circular_fill"
                android:text="悠扬"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60" />
            <Button
                android:id="@+id/dialog_music_btn_ethereal"
                android:background="@drawable/btn_circular_not_fill"
                android:layout_marginLeft="@dimen/space_10"
                android:text="空灵"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60" />
            <Button
                android:id="@+id/dialog_music_btn_ktv"
                android:background="@drawable/btn_circular_not_fill"
                android:layout_marginLeft="@dimen/space_10"
                android:text="KTV"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>